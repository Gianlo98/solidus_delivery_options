<% if order.delivery_date.present? %>
  <td class="align-center"><%= I18n.l order.delivery_date %></td>
<% else %>
  <td class="align-center">Unknown</td>
<% end %>
<% if SolidusDeliveryOptions::Config.delivery_time_enabled %>
  <% if order.delivery_time.present? %>
    <td class="align-center"><%= order.delivery_time %></td>
  <% else %>
    <td class="align-center">Unknown</td>
  <% end %>
<% end %>
